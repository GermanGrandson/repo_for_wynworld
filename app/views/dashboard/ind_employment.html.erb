<h1>Employment History for <%= "#{@user.fname} #{@user.lname}" %> </h1>



<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Job Title</th>
      <th>Type of Role</th>
      <th>Nature of Role</th>

    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.company.name %></td>
        <td><%= employment.jobtitle %></td>
        <td><%= employment.roletype %></td>
        <td><%= employment.rolenature %></td>

      <tr>
    <% end %>
  </tbody>
</table>
