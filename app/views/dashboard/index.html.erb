<script type="text/javascript">
$(function() {

var map = L.map('map').setView([38.7006009, -96.5933281], 4);
L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {minZoom: 4}).addTo(map);

 <% @company.each do |company| %>
   <% if !company.latitude.nil? %>
     L.marker([<%= company.latitude %>, <%= company.longitude %>]).addTo(map)
     .bindPopup('<%= company.name %>')

   <% end %>
 <% end %>
});
</script>
