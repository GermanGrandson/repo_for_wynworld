<% provide(:title, 'All users') %>
<h1>All users</h1>

      <p>
       <form>
         <legend>Search</legend>
         <div class='col-xs-4'>
             <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
         </div>
       </form>
     </p>

<table class="user-index-table">
  <thead>
      <th>Name</th>
      <th>Location</th>
      <th>Email</th>
      <th>Cohort</th>
      <th>Currently Working At</th>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.fname + " " + user.lname, user_path(user) %></td>
        <td><%= user.location %></td>
        <td><%= user.email %></td>
        <td><%= user.cohort.name %></td>
        <td><%#= user.employment.company.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate %>
