<% provide(:title, 'All users') %>
<h1>All users</h1>

<p>
  <form>
    <legend>Search</legend>
    <div class='col-xs-4'>
      <input class='form-control' name='keyword' placeholder='Keyword' type='text' value='<%= params[:keyword] %>'>
    </div>
  </form>
</p>

<table class="user-index-table">
  <thead>
    <th></th>
    <th>Name</th>
    <th>Location</th>
    <th>Email</th>
    <th>Cohort</th>
    <th>Currently Working At</th>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr><td><%= image_tag(user.avatar_url(:sm_thumb), :size => '36x36')%></td>
      <td><%= link_to "#{user.fname} #{user.lname}", user_path(user) %></td>
      <td><%= user.location %></td>
      <td><%= user.email %></td>
      <td><%= user.cohort.name %></td>
      <td>
        <% unless user.employments.empty? %>
        <%= user.employments.last.company.name %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate %>
