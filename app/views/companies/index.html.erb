<p id="notice"><%= notice %></p>


<h1>Hiring Partners</h1>

<div class="com-list">
    <% @companies.each do |company| %>
    <div class="com-indv">
        <%= link_to company.name, company, class: 'com-name' %>
        <p><%= company.street1 %></p>
        <p><%= company.street2 %></p>
        <p><%= company.city %>
        <%= company.state %>
        <%= company.zip %></p>
        <p><%= company.description %></p>
        <p><%# unless company.website.nil link_to company.website, "http://#{company.website}" end %></p>
        <div class="com-admin">
        <% if current_user.admin? %>
        <%= company.hp %>
        <%= company.contact_first %>
        <%= company.contact_last %>
        <%= company.contact_email %>
        <%= company.contact_phone %>
        <%= company.note %>
        <%= link_to 'Edit', edit_company_path(company) %>
        <%= link_to 'delete', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%# end %>
        <% end %>
      </div>
      </div>
        <% end %>
</div>



